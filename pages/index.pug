extends ../views/base
block vars
    - var navType = "fade"
    - var filename = "index.html"

block content
    header
        .container
            .row
                .center-block
                    .header-content
                        .header-content-inner
                            h1
                                img(src='img/dawn_logo_final.png', alt='DAWN')
                                br
                                | A New Era of Digital Currency and Computation
                            a.btn.btn-outline.btn-xl.page-scroll(href='#features') Dive into DAWN
                //
                  <div class="col-sm-5">
                  <div class="device-container">
                  <div class="device-mockup iphone6_plus portrait white">
                  <div class="device">
                  <div class="screen">
                  &lt;!&ndash; Demo image for screen mockup, you can put an image here, some HTML, an animation, video, or anything else! &ndash;&gt;
                  <img src="img/demo-screen-1.jpg" class="img-responsive" alt="">
                  </div>
                  <div class="button">
                  &lt;!&ndash; You can hook the "home button" to some JavaScript events or just remove it &ndash;&gt;
                  </div>
                  </div>
                  </div>
                  </div>
                  </div>
    section#features.features.bg-secondary
        .container
            .row
                .col-lg-12.text-center
                    .section-heading
                        h2 Scalable content, currency, and computation
                        p.text-muted In an era of government overreach, we are the solution.
                        hr
            .row
                .col-md-4
                    .device-container
                        .device-mockup.iphone6_plus.portrait.white
                            .device
                                .screen
                                    // Demo image for screen mockup, you can put an image here, some HTML, an animation, video, or anything else!
                                    img.img-responsive(src='img/demo-screen-2.jpg', alt='')
                                .button
                                    // You can hook the "home button" to some JavaScript events or just remove it
                .col-md-8
                    .container-fluid
                        .row
                            .col-md-6
                                .feature-item
                                    i.icon-screen-smartphone.text-primary
                                    h3 All Devices
                                    p.text-muted Code for iOS, Android, PC, and Web. Use it anywhere.
                            .col-md-6
                                .feature-item
                                    i.icon-camera.text-primary
                                    h3 Groundbreaking Content Storage
                                    p.text-muted Keep content in a blockchain.  No central authority means no censorship.
                        .row
                            .col-md-6
                                .feature-item
                                    i.icon-present.text-primary
                                    h3 Free to Use
                                    p.text-muted Using DAWN is free!
                            .col-md-6
                                .feature-item
                                    i.icon-lock-open.text-primary
                                    h3 Open Source
                                    p.text-muted Our sourcecode is open - no hidden bugs, trackers, or tricks!
                        .row(style='text-align:center;')
                            // Begin MailChimp Signup Form
                            #mc_embed_signup
                                form#mc-embedded-subscribe-form.validate(action='//dawn-project.us14.list-manage.com/subscribe/post?u=23aa809b4bb477c197b4c1d8b&id=993081890c', method='post', name='mc-embedded-subscribe-form', target='_blank', novalidate='')
                                    #mc_embed_signup_scroll
                                        h2 Stay up to date with DAWN
                                        .mc-field-group
                                            label(for='mce-EMAIL') Email Address:
                                            input#mce-EMAIL.required.email(type='email', value='', name='EMAIL')
                                            input#mc-embedded-subscribe.button(type='submit', value='Subscribe', name='subscribe')
                                        #mce-responses.clear
                                            #mce-error-response.response(style='display:none')
                                            #mce-success-response.response(style='display:none')
                                        // real people should not fill this in and expect good things - do not remove this or risk form bot signups
                                        div(style='position: absolute; left: -5000px;', aria-hidden='true')
                                            input(type='text', name='b_23aa809b4bb477c197b4c1d8b_993081890c', tabindex='-1', value='')
                            // End mc_embed_signup
    // first-text section start
    section.cta
        .cta-content
            .container
                .row
                    .col-sm-6
                        h2 DAWN
                        h3 Distributed.
                        h3 Autonomous.
                        h3 World.
                        h3 Network.
                        br
                    .col-sm-6
                        h2 Mission
                        h3
                            | A decentralized network that spans the globe and is fueled by a highly performant, open, and user-friendly blockchain combined with a fast and open social blogging network.
                        h3
                            | Blockchain technology is the driving force in today’s decentralization rush.But we are still facing issues with speed, adoption, and scalability. Dawn solves this by implementing the concept of application-specific blockchains. We introduce a multi-chain system that will combine the best of different technology stacks to create a series of blockchains that are fast, reliable, and open to any other chain on the market.
                // <a href="#contact" class="btn btn-outline btn-xl page-scroll">Let's Get Started!</a>
        .overlay
    // first-text section end
    // second-text section start
    section.features.bg-secondary
        .container
            .row
                .col-sm-6.text-left
                    h2 Technology
                    p
                        | Our chains and applications are all written in Go. This makes for a fast, efficient, and clear codebase that lowers development time for blockchain and third-party applications. We will create different chains per application to ensure speed and scalability on a large scale.
                .col-sm-6.text-left
                    h2 Social Media
                    p
                        | Dawn mesh is a lightweight but highly customizable social blogging platform written in Go and Javascript meant to stimulate the community and give them an outlet for their ideas. Content creators get rewarded a share of the crypto token when posting popular content.
            .row
                .col-sm-12.text-left
                    h2 Torrent Streaming
                    p
                        | One of our sidechains will allow the storage of torrent hashes. We’ll combine this with a front-end interface that allows for easy upload and viewing of video content. By using the torrent stream technology, we can create a database of decentralized video content.
            .row
                .col-sm-12.text-left
                    h2 The Dawn wallet application
                    p
                        | The Dawn wallet is your access to the network and the different tokens and chains the Dawn project will be releasing over the coming months. You can safely store your crypto-assets based on the Dawn concept here. And use our integrated p2p messenger service that is built-in the wallet.
            .row
                .col-sm-12.text-left
                    h2 Hardware
                    p
                        | By leveraging the best hardware combined with open-source software, we will create a range of open hardware devices that aim to bring affordable quality to users that look for privacy and freedom.
                        br
                        br
                        |                     The first device that we will be releasing is a lightweight plug & play validator node for the Dawn network. We aim to release this device in the first quarter of 2017. More devices will be added at a later stage.
    // second-text section end
    section#contact.contact
        .container
            h2 Connect with DAWN
            ul.list-inline.list-social
                li.social-twitter
                    a(href='https://twitter.com/Dawn_Community')
                        i.fa.fa-twitter
                li.social-facebook
                    a(href='https://www.facebook.com/dawnmeshofficial/?fref=ts')
                        i.fa.fa-facebook
                //
                  <li class="social-google-plus">
                  <a href="#"><i class="fa fa-google-plus"></i></a>
                  </li>
            // Begin MailChimp Signup Form
            #mc_embed_signup
                form#mc-embedded-subscribe-form.validate(action='//dawn-project.us14.list-manage.com/subscribe/post?u=23aa809b4bb477c197b4c1d8b&id=993081890c', method='post', name='mc-embedded-subscribe-form', target='_blank', novalidate='')
                    #mc_embed_signup_scroll
                        h3 Stay up to date with the Dawn project
                        .mc-field-group
                            label(for='mce-EMAIL')
                                | Email Address:
                            input#mce-EMAIL.required.email(type='email', value='', name='EMAIL')
                            input#mc-embedded-subscribe.button(type='submit', value='Subscribe', name='subscribe')
                        #mce-responses.clear
                            #mce-error-response.response(style='display:none')
                            #mce-success-response.response(style='display:none')
                        // real people should not fill this in and expect good things - do not remove this or risk form bot signups
                        div(style='position: absolute; left: -5000px;', aria-hidden='true')
                            input(type='text', name='b_23aa809b4bb477c197b4c1d8b_993081890c', tabindex='-1', value='')
            // End mc_embed_signup
